{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "@rocketseat/eslint-config/node",
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "printWidth": 80,
            "tabWidth": 2,
            "singleQuote": true,
            "trailingComma": "all",
            "arrowParens": "always",
            "semi": true,
            "useTabs": true
          }
        ]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ]
  },
  "rules": {}
}
